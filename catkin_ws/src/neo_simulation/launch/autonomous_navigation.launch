<?xml version="1.0" encoding="UTF-8"?>
<launch>
  
  <!--To launch gmapping to create a map-->
  <arg name="gmapping" value="true"/> 

  <!--To launch amcl-->
  <!--NOTE: Do not forget to configure the correct Map for AMCL-->
  <!--NOTE: Use file neo_simulation/config/amcl/amcl.launch-->
  <arg name="amcl" value="true"/>

  <!-- To use neo_localization -->
  <arg name="neo_localization" value="true"/>
  
  <!--To launch move base-->
  <arg name="move_base" value="true"/>

<!---=================================================================================================================================================================-->

 <!--Naviagation Package-->

 <!--if arg gmapping is set to true (default=false)-->

 <group if="$(arg gmapping)">
 	<include file="$(find neo_simulation)/config/gmapping/gmapping.launch"/>
 </group>

 <!--if arg amcl is set to true (default=false)-->

 <group if="$(arg amcl)">
 	<include file="$(find neo_simulation)/config/amcl/amcl.launch"/>
 </group>

  <group if="$(arg neo_localization)">
    <include file="$(find neo_simulation)/launch/neo_localization.launch"/>
  </group>

 <!--if arg move_base is set to true-->

 <group if="$(arg move_base)">
 	<include file="$(find neo_simulation)/config/move_base/move_base.launch"/>
 </group> 


</launch>
